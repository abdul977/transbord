<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Transbord" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Color attributes -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorAccent">@color/accent</item>

        <item name="colorOnPrimary">@color/white</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorOnBackground">@color/text_primary_light</item>
        <item name="colorOnSurface">@color/text_primary_light</item>
        <item name="colorOnSurfaceVariant">@color/text_secondary_light</item>

        <item name="android:colorBackground">@color/background_light</item>
        <item name="colorSurface">@color/white</item>

        <!-- Text appearance -->
        <item name="textAppearanceDisplayLarge">@style/TextAppearance.Transbord.Display</item>
        <item name="textAppearanceHeadlineMedium">@style/TextAppearance.Transbord.Headline</item>
        <item name="textAppearanceTitleLarge">@style/TextAppearance.Transbord.Title</item>
        <item name="textAppearanceTitleMedium">@style/TextAppearance.Transbord.Subtitle</item>
        <item name="textAppearanceBodyLarge">@style/TextAppearance.Transbord.Body</item>
        <item name="textAppearanceBodySmall">@style/TextAppearance.Transbord.Caption</item>

        <!-- Component styles -->
        <item name="materialButtonStyle">@style/Widget.Transbord.Button.Primary</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.Transbord.Button.Secondary</item>
        <item name="materialCardViewStyle">@style/Widget.Transbord.Card</item>
        <item name="floatingActionButtonStyle">@style/Widget.Transbord.FloatingActionButton</item>

        <!-- System UI -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Transbord" parent="Base.Theme.Transbord" />
</resources>